<h2>My Gardens</h2>

<a href="/">Home</a>



<%# Get Id of Vegetables in the Garden %>
<img src="./img/vegetablePatch.jpeg" alt="">
<% gardens.forEach(function (garden) { %>
    <div class = 'vegetables'>
        <a href="gardens/<%= garden.id %>">Enter the Garden</a>
        <p>Type of Garden: <%= garden.theme %> </p>
        <p>Location: <%= garden.location %> </p>

        <form action="/gardens/<%= garden.id %>/?_method=DELETE" method = 'POST'>
            <input type="submit" value="DELETE" name="" id="">
        </form>
    </div>
<% }) %>

